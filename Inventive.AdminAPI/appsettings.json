{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=Inventive;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "https://admin.inventive.local",
    "Audience": "https://admin.inventive.local",
    "SecretKey": "CHANGE-THIS-IN-PRODUCTION-USE-256-BIT-KEY-MINIMUM-32-CHARACTERS-LONG",
    "ExpirationMinutes": 30,
    "RequireAdminRole": true
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:4201"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
  },
  "Redis": {
    "ConnectionString": "localhost:6379,password=redis"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [AdminAPI] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*"
}
